<panel gap="4" top="4" left="4" bottom="4" right="1" columns="1">
  <panel name="Select Pizza Type" columns="2" weightx="100" weighty="90" >
  		<label text="Select Pizza Base:"/>
  		<list name="pizzaBase" weightx="100" action="selectPizzaBase(this)" />
  		<label text="Select Pizza Toppings:"/>
  		<list name="pizzaTopping" selection="multiple"  action="selectPizzaToppings(this)"/>
  </panel>
  <label name="price" weightx="100" weighty="5" />
  <button text="Pay" weighty="5" action="clickConfirm()" />
</panel>
